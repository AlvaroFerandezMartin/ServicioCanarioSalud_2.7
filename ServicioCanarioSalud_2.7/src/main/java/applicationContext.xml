<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<context:component-scan base-package="es.pildoras.pruebaannotations"></context:component-scan>

<bean id="medico" class="es.pildoras.pruebaannotations.Medico">
    <constructor-arg name="nombre" value="Juan" />
    <constructor-arg name="edad" value="35" />
    <constructor-arg name="profesion" value="Cirujano" />
</bean>

</beans>